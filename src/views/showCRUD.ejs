<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Show CRUD</title>
    </head>
    <style>
    table, th, td {
      border:1px solid black;
      border-collapse: collapse;
    }

    .btn-edit{
        outline: none;
        border: none;
        border-radius: 0.5rem;
        background: yellow;
        height: 1.5rem;
        width: 3.5rem;
        cursor: pointer;
    }

    .btn-delete{
        outline: none;
        border: none;
        border-radius: 0.5rem;
        background: red;
        height: 1.5rem;
        width: 3.5rem;
        cursor: pointer;
    }
    </style>
    <body>
        <h2>Show all users</h2>

        <table style="width:100%">
            <tr>
                <th>Email</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Address</th>
                <th>Actions</th>
            </tr>

            <% for(let i=0; i < dataTable.length; i++) { %>
            <tr>
                <td><%= dataTable[i].email %></td>
                <td><%= dataTable[i].firstName %></td>
                <td><%= dataTable[i].lastName %></td>
                <td><%= dataTable[i].address %></td>
                <td>
                    <a href="/edit-crud?id=<%= dataTable[i].id %>"
                        class="btn-edit"
                        type="button">Edit</a>
                    <a href="/delete-crud?id=<%= dataTable[i].id %>"
                        class="btn-delete" type="button">Delete</a>
                </td>
            </tr>
            <% } %>
        </table>
    </body>
</html>
